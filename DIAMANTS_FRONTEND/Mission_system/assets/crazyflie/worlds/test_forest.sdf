<?xml version="1.0" ?>
<sdf version="1.10">
  <world name="test_forest">
    <!-- Plugins système -->
    <plugin name="gz::sim::systems::Physics" filename="gz-sim-physics-system"/>
    <plugin name="gz::sim::systems::Sensors" filename="gz-sim-sensors-system">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin name="gz::sim::systems::SceneBroadcaster" filename="gz-sim-scene-broadcaster-system"/>
    <plugin name="gz::sim::systems::UserCommands" filename="gz-sim-user-commands-system"/>

    <!-- Physique -->
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
    </physics>

    <!-- Environnement -->
    <gravity>0 0 -9.81</gravity>

    <!-- Sol -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>200 200</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.4 0.6 0.3 1</ambient>
            <diffuse>0.5 0.7 0.4 1</diffuse>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>200 200</size>
            </plane>
          </geometry>
        </collision>
      </link>
    </model>

    <!-- Éclairage -->
    <scene>
      <ambient>0.6 0.6 0.5 1</ambient>
      <background>0.7 0.8 1.0 1</background>
      <shadows>true</shadows>
    </scene>

    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>100 100 50 0 0 0</pose>
      <diffuse>1.0 0.95 0.8 1</diffuse>
      <direction>-1 -1 -1</direction>
    </light>

    <!-- Quelques arbres simples avec géométries directes -->
    <model name="tree_1">
      <static>true</static>
      <pose>20 20 0 0 0 0</pose>
      <link name="trunk">
        <pose>0 0 2 0 0 0</pose>
        <visual name="trunk_visual">
          <geometry>
            <cylinder>
              <radius>0.3</radius>
              <length>4</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.4 0.3 0.2 1</ambient>
            <diffuse>0.4 0.3 0.2 1</diffuse>
          </material>
        </visual>
        <collision name="trunk_collision">
          <geometry>
            <cylinder>
              <radius>0.3</radius>
              <length>4</length>
            </cylinder>
          </geometry>
        </collision>
      </link>
      <link name="crown">
        <pose>0 0 5.5 0 0 0</pose>
        <visual name="crown_visual">
          <geometry>
            <sphere>
              <radius>2.5</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.2 0.5 0.2 1</ambient>
            <diffuse>0.3 0.6 0.3 1</diffuse>
          </material>
        </visual>
        <collision name="crown_collision">
          <geometry>
            <sphere>
              <radius>2.0</radius>
            </sphere>
          </geometry>
        </collision>
      </link>
      <joint name="trunk_crown_joint" type="fixed">
        <parent>trunk</parent>
        <child>crown</child>
      </joint>
    </model>

    <model name="tree_2">
      <static>true</static>
      <pose>-30 15 0 0 0 0</pose>
      <link name="trunk">
        <pose>0 0 1.5 0 0 0</pose>
        <visual name="trunk_visual">
          <geometry>
            <cylinder>
              <radius>0.2</radius>
              <length>3</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.5 0.4 0.3 1</ambient>
            <diffuse>0.5 0.4 0.3 1</diffuse>
          </material>
        </visual>
        <collision name="trunk_collision">
          <geometry>
            <cylinder>
              <radius>0.2</radius>
              <length>3</length>
            </cylinder>
          </geometry>
        </collision>
      </link>
      <link name="crown">
        <pose>0 0 3.8 0 0 0</pose>
        <visual name="crown_visual">
          <geometry>
            <sphere>
              <radius>1.8</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.3 0.5 0.3 1</ambient>
            <diffuse>0.4 0.6 0.4 1</diffuse>
          </material>
        </visual>
        <collision name="crown_collision">
          <geometry>
            <sphere>
              <radius>1.5</radius>
            </sphere>
          </geometry>
        </collision>
      </link>
      <joint name="trunk_crown_joint" type="fixed">
        <parent>trunk</parent>
        <child>crown</child>
      </joint>
    </model>

    <!-- DRONES CRAZYFLIE (si modèles disponibles) -->
    <include>
      <uri>model://crazyflie</uri>
      <name>crazyflie</name>
      <pose>0.0 0.0 3.0 0 0 0</pose>
    </include>

    <include>
      <uri>model://crazyflie1</uri>
      <name>crazyflie1</name>
      <pose>5.0 0.0 3.0 0 0 0</pose>
    </include>

  </world>
</sdf>
