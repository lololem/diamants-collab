# DIAMANTS Production Configuration Template
# Copy this file to .env and fill in your production values

# API Configuration
DIAMANTS_HOST=0.0.0.0
DIAMANTS_PORT=8000
DIAMANTS_ROS_HOST=localhost
DIAMANTS_ROS_PORT=9090

# Security Configuration - CHANGE IN PRODUCTION
DIAMANTS_SECRET_KEY=your-production-secret-key-here

# Logging Configuration
DIAMANTS_LOG_LEVEL=INFO
DIAMANTS_LOG_FILE=diamants_api.log

# ROS2 Configuration
ROS_DOMAIN_ID=42
ROS_DISTRO=jazzy

# Web Interface Configuration
DIAMANTS_FRONTEND_HOST=localhost
DIAMANTS_FRONTEND_PORT=5550

